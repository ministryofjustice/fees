<% content_for :title, "Fee Category: #{@category.title}" %>

<div class="row">
  <h1>
    <%= @category.title %>
  </h1>
  <p>
    <%= @category.description %>
  </p>
</div>

<div class="row">
  <h2>
    Fees
  </h2>

  <ul>
    <% @category.fee_types.each do |fee| %>
    <li>
      <%= link_to fee.title, fee_path(fee.friendly_id) %>
    </li>
    <% end %>
  </ul>
</div>
